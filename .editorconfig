# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
# continuation supported by IntelliJ IDEA and c.o., maybe also other editors?
continuation_indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
